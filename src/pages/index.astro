---
import Layout from "../layouts/Layout.astro";

const users = fetch("https://jsonplaceholder.typicode.com/users").then((res) => res.json());
const data = await users;

// console.log(data);
---

<Layout title="Users">
	<h1 class="text-center text-3xl font-bold mb-10">Users</h1>
	<ul class="text-center">
		{data.map((user) => (
			<li class="my-4">
				<a class="hover:underline" href={`/users/${user.username.toLowerCase()}`}>{ user.name }</a>
			</li>
		))}
	</ul>
</Layout>